= form_for kinship do |f| 
  .input-row
    = f.label :name, class: 'label'
    = f.text_field :name, class: 'textfield' 

  .input-row
    = f.label :colorful, class: 'label'
    = f.check_box :colorful, class: 'check-box'

  .color-box
    .input-row
      = f.label :color_id, class: 'label'
      = f.select :color_id, []

  .input-row
    = f.label :description, class: 'label'
    = f.text_area :description, class: 'textarea' 

  .input-row
    = f.submit t('.submit'), class: 'submit'
