<div class="wrapper">
<h1>New Kinship</h1>

<%= form_for @kinship, url: kinships_path do |f| %>

    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "textfield" %>
    </p>

    <p>
        <%= f.label :color %><br>
        <%= f.text_field :color, class: "textfield" %>
    </p>

    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description, class: "textarea" %>
    </p>

    <p>
        <%= f.submit :Save, class: "submit" %>
    </p>

<% end %>