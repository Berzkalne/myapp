<%= link_to 'Home', home_path %>

<h1>Listing kinships</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Color</th>
	</tr>

	<% @kinships.each do |kinship| %>
		<tr>
			<td><%= link_to kinship.name, kinship_path(kinship) %></td>
			<td><%= kinship.color %></td>
		</tr>
	<% end %>
	<%= link_to 'New kinship', new_kinship_path %>
</table>
