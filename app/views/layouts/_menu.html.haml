- if current_user

  %ul.menu
    %li.section
      .section-link
        = t('.family')
        %ul.dropdown
          %li.dropdown-option= link_to t('.unicorn_list'), unicorns_path, class: 'option-link'
          %li.dropdown-option= link_to t('.kinship_list'), kinships_path, class: 'option-link'
          %li.dropdown-option= link_to t('.pet_list'), pets_path, class: 'option-link'
    %li.section
      .section-link
        = t('.education')
        %ul.dropdown
          %li.dropdown-option= link_to t('.school_list'), schools_path, class: 'option-link'
          %li.dropdown-option= link_to t('.subject_list'), subjects_path, class: 'option-link'
    %li.section
      .section-link
        = t('.eco')
        %ul.dropdown
          %li.dropdown-option= link_to t('.cash_turnover_list'), cash_turnovers_path, class: 'option-link'
          %li.dropdown-option= link_to t('.kind_list'), kinds_path, class: 'option-link'
          %li.dropdown-option= link_to t('.statistics'), statistics_cash_turnovers_path, class: 'option-link'

    %li.section
      .section-link
        = t('.language')
        %ul.dropdown
          %li.dropdown-option= link_to t('.lv'), url_for(locale: :lv), class: 'option-link'
          %li.dropdown-option= link_to t('.en'), url_for(locale: :en), class: 'option-link'

    %li.section
      .current-user
        = current_user.email

    %li.section= link_to t('.log_out'), log_out_path, method: :delete, class: 'link'
