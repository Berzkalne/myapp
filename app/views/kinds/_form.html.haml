= form_for kind do |f| 
  .input-row
    = f.label :name, class: 'label'
    = f.text_field :name, class: 'textfield' 

  .input-row
    = f.label :price, class: 'label'
    = f.text_field :price, class: 'textfield'

  .input-row
    = f.label :percent, class: 'label'
    = f.text_field :percent, class: 'textfield'

  .input-row
    = f.submit t('.submit'), class: 'submit'
