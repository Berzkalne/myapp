= form_for user do |f| 
  .input-row
    = f.label :name, class: 'label'
    = f.text_field :name, class: 'textfield'

  .input-row
    = f.label :email, class: 'label'
    = f.text_field :email, class: 'textfield'

  .input-row
    = f.label :password, class: 'label'
    = f.password_field :password, class: 'textfield'

  .input-row
    = f.label :password_confirmation, class: 'label'
    = f.password_field :password_confirmation, class: 'textfield'

  .input-row
    = f.label :age, class: 'label'
    = f.text_field :age, class: 'textfield'

  .input-row
    = f.label :description, class: 'label'
    = f.text_area :description, class: 'textarea'

  .input-row
    = f.submit t('.submit'), class: 'submit'
