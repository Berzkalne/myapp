.wrapper
  %h1= t('.title')

  = form_for @unicorn, url: unicorns_path do |f| 
    .input_row
      = f.label :first_name, class: 'label'
      = f.text_field :first_name, class: 'textfield' 

    .input_row
      = f.label :age, class: 'label'
      = f.number_field :age, class: 'textfield'

    .input_row
      = f.label :horn_length,  class: 'label'
      = f.number_field :horn_length, class: 'textfield'

    .input_row
      = f.label :height, class: 'label'
      = f.number_field :height, class: 'textfield'

    .input_row
      = f.label :weight, class: 'label'
      = f.number_field :weight, class: 'textfield'

    .input_row
      = f.label :kinship_id, class: 'label'
      = f.select :kinship_id, options_for_select(Kinship.all.collect{ |kinship| [kinship.name, kinship.id]})

    .input_row
      = f.submit t('.submit'), class: 'submit'
      
  .picture
    = image_tag("unicornup.jpg")
