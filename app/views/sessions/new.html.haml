.wrapper
  %h1= t('.title')
  
  = form_for :session, url: log_in_path do |f| 
    .input_row
      = f.label :email, class: 'label'
      = f.text_field :email, class: 'textfield'

    .input_row
      = f.label :password, class: 'label'
      = f.password_field :password, class: 'textfield'

    .input_row
      = f.submit t('.submit'), class: 'submit'

    = link_to t('.signup'), new_user_path
